<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.weiyu.dao.PermissionDao">

    <!--查询所有权限信息-->
    <select id="findAllPermission" resultType="Permission">
        SELECT
        id,
        pid,
        name,
        url,
        code
        FROM
        sys_permission
    </select>
    
    <select id="findOne" resultType="Permission">
        SELECT
        id,
        pid,
        name,
        url,
        code
        FROM
        sys_permission
        WHERE id = #{id}
    </select>

    <!--新增权限-->
    <insert id="addPermission" parameterType="Permission">
        INSERT INTO sys_permission(name,url,pid,code)
        VALUES(
        #{name},
        #{url},
        #{pid},
        #{code}
        )
    </insert>

    <!--更新权限-->
    <update id="updatePermission" parameterType="Permission">
        UPDATE
        sys_permission
        SET
        name = #{name},
        url = #{url},
        pid = #{pid},
        code = #{code}
        WHERE id = #{id}
    </update>

    <!--删除权限-->
    <delete id="deletePermission" parameterType="long">
        DELETE FROM sys_permission
        WHERE id = #{id}
    </delete>

</mapper>